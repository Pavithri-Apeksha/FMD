<AnchorPane fx:id="loginContext" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developerstack.edumanage.controller.LoginFormController">
   <children>
      <Label layoutX="39.0" layoutY="6.0" prefHeight="43.0" prefWidth="145.0" text="Login" textFill="#0a6bea">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Separator layoutX="14.0" layoutY="55.0" prefHeight="2.0" prefWidth="300.0" />
      <TextField fx:id="txtEmail" layoutX="36.0" layoutY="73.0" prefHeight="35.0" prefWidth="316.0" promptText="Email">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Hyperlink layoutX="251.0" layoutY="160.0" onAction="#forgotPasswordOnAction" text="Forgot Password" underline="true" />
      <Button layoutX="36.0" layoutY="205.0" mnemonicParsing="false" onAction="#loginOnAction" prefHeight="52.0" prefWidth="316.0" style="-fx-background-color: #3498db;" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
