            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ImageView fitHeight="413.0" fitWidth="265.0" layoutX="371.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/bg-login.jpg" />
         </image>
      </ImageView>
      <PasswordField fx:id="txtPassword" layoutX="37.0" layoutY="119.0" prefHeight="35.0" prefWidth="316.0" promptText="Password">
         <font>
            <Font size="15.0" />
         </font>
